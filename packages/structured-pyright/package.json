{
    "name": "sploot-checker",
    "displayName": "Sploot Checker",
    "main": "dist/sploot-checker.js",
    "module": "dist/sploot-checker.mjs",
    "typings": "dist/sploot-checker.d.ts",
    "description": "Type checker for Sploot nodes in the Python language",
    "version": "1.0.0",
    "license": "MIT",
    "author": {
        "name": "Katie Bell"
    },
    "scripts": {
        "build": "tsc && rollup -c && npx copyfiles -u 3 '../pyright-internal/typeshed-fallback/stdlib/**' dist/static/typeshed",
        "clean": "shx rm -rf ./dist ./out README.md LICENSE.txt",
        "prepack": "npm run clean && shx cp ../../README.md . && shx cp ../../LICENSE.txt . && npm run build",
        "watch": "rollup -c -w"
    },
    "dependencies": {
        "leven": "^3.1.0",
        "vscode-jsonrpc": "8.0.0-next.7",
        "vscode-languageclient": "8.0.0-next.14",
        "vscode-languageserver": "8.0.0-next.10",
        "vscode-languageserver-protocol": "3.17.0-next.16",
        "vscode-uri": "^3.0.3"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.3.2",
        "@types/copy-webpack-plugin": "^10.1.0",
        "@types/node": "^17.0.14",
        "copy-webpack-plugin": "^10.2.4",
        "copyfiles": "^2.4.1",
        "esbuild-loader": "^2.18.0",
        "rollup": "^2.74.1",
        "rollup-plugin-dts": "^4.2.1",
        "rollup-plugin-polyfill-node": "^0.9.0",
        "shx": "^0.3.4",
        "ts-loader": "^9.2.6",
        "typescript": "^4.6.4",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2"
    },
    "files": [
        "/dist",
        "LICENSE.txt"
    ]
}
